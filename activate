# Define the root directory dynamically, based on the location of the script
PROJECT_ROOT=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)

# Kafka and other environment variables
export KAFKA_HEAP_OPTS="-XX:+UnlockExperimentalVMOptions -XX:+UseG1GC"

export PROJECT_HOME="$PROJECT_ROOT"

# Use paths relative to the project root
export JAVA_HOME=$(brew --prefix openjdk@17)/libexec/openjdk.jdk/Contents/Home
export SPARK_HOME="$PROJECT_ROOT/spark-3.3.3-bin-hadoop3"
export PATH=$JAVA_HOME/bin:$SPARK_HOME/bin:$PATH
export MONGO_PATH="$PROJECT_ROOT/mongodb-community/bin"
export PATH=$SPARK_HOME/bin:$PATH

# Check the current paths to make sure everything is set correctly
echo "Project Root: $PROJECT_ROOT"
echo "Java Home: $JAVA_HOME"
echo "Spark Home: $SPARK_HOME"
echo "Mongo Path: $MONGO_PATH"

